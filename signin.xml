<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signInPage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohamedelhefnawy.socialnetwork.MainActivity"
    android:background="#92d36e">

    <EditText
        android:layout_width="214dp"
        android:layout_height="34dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/email"
        android:background="#72bb53"
        android:text="E-mail"
        android:textColor="?attr/colorBackgroundFloating"
        android:textAlignment="textStart"
        android:paddingLeft="10dp"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintVertical_bias="0.46" />

    <Button
        android:text="Sign In"
        android:layout_width="wrap_content"
        android:id="@+id/signIn"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:visibility="visible"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/createNew"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/forgetPass" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="49dp"
        app:srcCompat="@drawable/people"
        android:id="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintVertical_bias="0.65999997" />

    <TextView
        android:text="Mateegy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@android:color/background_light"
        android:fontFamily="casual"
        android:textSize="24sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.66"
        app:layout_constraintVertical_bias="0.33" />

    <EditText
        android:layout_width="215dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pass"
        android:singleLine="false"
        android:visibility="visible"
        android:background="#72bb53"
        android:layout_height="34dp"
        android:textColor="?attr/colorBackgroundFloating"
        android:paddingLeft="10dp"
        android:contentDescription="Password"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/email"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.04"
        app:layout_constraintHorizontal_bias="0.47" />

    <ImageView
        android:layout_width="389dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.19"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:layout_width="201dp"
        android:id="@+id/createNew"
        android:background="#92d36e"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toTopOf="@+id/email"
        app:layout_constraintVertical_bias="1.0"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:text="Create New Account"
        android:textColorLink="#629c44"
        android:textColor="#4c7a34"
        style="?android:attr/borderlessButtonStyle"
        android:focusable="false" />

    <Button
        android:layout_width="201dp"
        android:id="@+id/forgetPass"
        android:background="#92d36e"
        android:textColor="#4c7a34"
        android:layout_height="48dp"
        app:layout_constraintRight_toRightOf="@+id/error"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.42000002"
        android:text="Forgot Password ?"
        style="?android:attr/borderlessButtonStyle"
        android:focusable="false" />

    <TextView
        android:text="TextView"
        android:layout_width="68dp"
        android:layout_height="59dp"
        android:id="@+id/error"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.61"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="1.0" />

</android.support.constraint.ConstraintLayout>
