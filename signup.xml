<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohamedelhefnawy.socialnetwork.MainActivity"
    android:background="#92d36e">

    <Button
        android:text="Sign Up"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:id="@+id/signIn"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:visibility="visible"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="49dp"
        app:srcCompat="@drawable/people"
        android:id="@+id/imageView"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/signIn"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:text="Mateegy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@android:color/background_light"
        android:fontFamily="casual"
        android:textSize="24sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.63"
        app:layout_constraintVertical_bias="0.65999997" />

    <EditText
        android:layout_width="214dp"
        android:layout_height="34dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/email"
        android:background="#72bb53"
        android:text="Username"
        android:textColor="?attr/colorBackgroundFloating"
        android:textAlignment="textStart"
        android:paddingLeft="10dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/signIn"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47000003" />

    <EditText
        android:layout_width="214dp"
        android:layout_height="34dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/answerquestion"
        android:background="#72bb53"
        android:textColor="?attr/colorBackgroundFloating"
        android:textAlignment="textStart"
        android:paddingLeft="10dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/signIn"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97"
        app:layout_constraintHorizontal_bias="0.9" />

    <EditText
        android:layout_width="215dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:singleLine="false"
        android:visibility="visible"
        android:background="#72bb53"
        android:layout_height="34dp"
        android:textColor="?attr/colorBackgroundFloating"
        android:paddingLeft="10dp"
        android:contentDescription="Password"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.58000004" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="97dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView3"
        app:layout_constraintBottom_toBottomOf="@+id/signIn"
        android:layout_marginBottom="112dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:layout_height="34dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText4"
        android:background="#72bb53"
        android:layout_width="214dp"
        android:text="Mail"
        android:paddingLeft="10dp"
        android:textColor="?attr/colorBackgroundFloating"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="57dp"
        android:layout_height="37dp"
        android:id="@+id/error"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.58" />

    <Spinner
        android:layout_width="331dp"
        android:layout_height="42dp"
        android:id="@+id/spinner2"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintHorizontal_bias="0.41" />

    <TextView
        android:text="Choose a question to answer if you forgot your password"
        android:layout_height="20dp"
        android:id="@+id/insertquestion"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.65999997"
        android:layout_width="360dp" />

    <TextView
        android:text="Add your answer"
        android:layout_height="20dp"
        android:id="@+id/insertanswer"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.85"
        android:layout_width="130dp" />

</android.support.constraint.ConstraintLayout>
